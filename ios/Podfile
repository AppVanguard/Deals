# Define the minimum iOS deployment target.
platform :ios, '13.0'

# Disable CocoaPods analytics for faster builds.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Flutter setup
project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Enable modular headers & dynamic frameworks for compatibility
use_frameworks!
use_modular_headers!

target 'Runner' do
  # Install Flutter dependencies
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # Firebase SDK (if used)
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Analytics'
  pod 'Firebase/Messaging'

  # Facebook SDK for Login
  pod 'FBSDKCoreKit', '~> 14.1.0'
  pod 'FBSDKLoginKit', '~> 14.1.0'
  pod 'FBSDKShareKit', '~> 14.1.0'

  # Ensure smooth post-install setup
  post_install do |installer|
    installer.pods_project.targets.each do |target|
      flutter_additional_ios_build_settings(target)
    end
  end
end
