platform :ios, '13.0'

# Disable CocoaPods analytics
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Get the Flutter root directory from the environment (Codemagic automatically sets this)
flutter_root = ENV['FLUTTER_ROOT']

# Load Flutter dependencies manually
load File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'pod_helper.rb')

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Install all iOS pods
  install_all_flutter_pods File.dirname(File.realpath(__FILE__))
end
